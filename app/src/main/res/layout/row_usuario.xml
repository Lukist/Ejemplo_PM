<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/row_usuario_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/card_back"
        android:clickable="true"
        android:focusable="true">


        <TextView
            android:id="@+id/usuario_fila__nombre"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Nombre Usuario"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/usuario_fila__ID"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@id/usuario_fila__nombre"
            app:layout_constraintTop_toBottomOf="@id/usuario_fila__nombre" />


        <TextView
            android:id="@+id/usuario_fila__extra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text=""
            android:textSize="13sp"
            android:layout_marginTop="6dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/usuario_fila__nombre"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/usuario_fila__ID" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>